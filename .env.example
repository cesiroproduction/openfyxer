# OpenFyxer Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SECURITY (REQUIRED - Change these in production!)
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-bytes-long!

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://openfyxer:openfyxer_secret@postgres:5432/openfyxer
# For SQLite fallback (development only):
# DATABASE_URL=sqlite:///./openfyxer.db

# =============================================================================
# NEO4J GRAPH DATABASE
# =============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=openfyxer_neo4j

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Local LLM (Ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b

# Cloud LLM Providers (Optional - leave empty if not using)
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# Default LLM provider: local, openai, gemini, claude, cohere
DEFAULT_LLM_PROVIDER=local

# =============================================================================
# GOOGLE OAUTH2 (Gmail + Calendar - RECOMMENDED)
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable APIs: Gmail API, Google Calendar API
# Add redirect URI: http://localhost:8000/api/v1/integrations/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/integrations/google/callback

# =============================================================================
# EMAIL PROVIDERS (Legacy OAuth2 Credentials)
# =============================================================================
# Gmail OAuth2 (legacy - use GOOGLE_CLIENT_ID instead)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/gmail/callback

# Microsoft/Outlook OAuth2
MICROSOFT_CLIENT_ID=YOUR_MICROSOFT_CLIENT_ID_HERE
MICROSOFT_CLIENT_SECRET=YOUR_MICROSOFT_CLIENT_SECRET_HERE
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/auth/microsoft/callback

# Yahoo OAuth2
YAHOO_CLIENT_ID=YOUR_YAHOO_CLIENT_ID_HERE
YAHOO_CLIENT_SECRET=YOUR_YAHOO_CLIENT_SECRET_HERE
YAHOO_REDIRECT_URI=http://localhost:8000/api/v1/auth/yahoo/callback

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
# Slack
SLACK_WEBHOOK_URL=

# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMTP for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
CORS_ORIGINS=http://localhost:3000
LOG_LEVEL=INFO

# Frontend URL (for OAuth callbacks)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# WHISPER STT SETTINGS
# =============================================================================
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large
# Larger models are more accurate but require more resources
